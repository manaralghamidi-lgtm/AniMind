          { textAr: "شخص يواجه الخطر جنبًا إلى جنب مع من يحبهم.", type: "asuna" },
          { textAr: "شخص يبدو لطيفًا لكن له جانب مرعب في القتال.", type: "nezuko" },
          { textAr: "شخص يقف ضد الجميع بحثًا عن شخص يفهمه.", type: "zerotwo" }
        ]
      }
    ];

    var quizQuestionsEl = document.getElementById("quiz-questions");
    var quizProgressEl = document.getElementById("quiz-progress");
    var quizErrorEl = document.getElementById("quiz-error");
    var resultCardEl = document.getElementById("result-card");
    var resultNameEl = document.getElementById("result-name");
    var resultArchetypeEl = document.getElementById("result-archetype");
    var resultDescriptionEl = document.getElementById("result-description");
    var resultTraitsEl = document.getElementById("result-traits");
    var resultAvatarEl = document.getElementById("result-avatar");
    var btnResult = document.getElementById("btn-result");
    var btnResetQuiz = document.getElementById("btn-reset-quiz");

 
    resultAvatarEl.onerror = function () { this.src = "anime-default.png"; };

    function renderQuiz() {
      quizQuestionsEl.innerHTML = "";
      for (var qIndex = 0; qIndex < quizData.length; qIndex++) {
        var question = quizData[qIndex];
        var qWrapper = document.createElement("div");
        qWrapper.className = "quiz-question";

        var title = document.createElement("div");
        title.textContent = (qIndex + 1) + ". " + question.textAr;
        qWrapper.appendChild(title);

        var optionsWrapper = document.createElement("div");
        optionsWrapper.className = "quiz-options";

        for (var oIndex = 0; oIndex < question.options.length; oIndex++) {
          var option = question.options[oIndex];

          var optionLabel = document.createElement("label");
          optionLabel.className = "quiz-option";
          optionLabel.setAttribute("data-question-index", String(qIndex));

          var input = document.createElement("input");
          input.type = "radio";
          input.name = "q" + qIndex;
          input.value = option.type;

          var textContainer = document.createElement("div");
          textContainer.textContent = option.textAr;

          optionLabel.appendChild(input);
          optionLabel.appendChild(textContainer);

          optionLabel.addEventListener("click", onOptionClick);
          optionsWrapper.appendChild(optionLabel);
        }

        qWrapper.appendChild(optionsWrapper);
        quizQuestionsEl.appendChild(qWrapper);
      }
    }

    function onOptionClick(event) {
      var label = event.currentTarget;
      var qIndex = label.getAttribute("data-question-index");
      if (qIndex === null) return;

      var allForQuestion = quizQuestionsEl.querySelectorAll('.quiz-option[data-question-index="' + qIndex + '"]');
      for (var i = 0; i < allForQuestion.length; i++) {
        allForQuestion[i].classList.remove("selected");
      }

      label.classList.add("selected");
      var input = label.querySelector("input");
      if (input) input.checked = true;
      updateQuizProgress();
    }

    function updateQuizProgress() {
      var total = quizData.length;
      var answered = 0;

      for (var i = 0; i < total; i++) {
        var checked = quizQuestionsEl.querySelector('input[name="q' + i + '"]:checked');
        if (checked) answered++;
      }

      quizProgressEl.textContent = answered + " / " + total + " تمّت الإجابة";
      if (answered === total) quizErrorEl.style.display = "none";
    }

    function calculateResult() {
      var scores = {
        levi: 0, luffy: 0, naruto: 0, eren: 0, gojo: 0, zoro: 0,
        mikasa: 0, sakura: 0, hinata: 0, asuna: 0, nezuko: 0, zerotwo: 0
      };

      var total = quizData.length;
      for (var i = 0; i < total; i++) {
        var checked = quizQuestionsEl.querySelector('input[name="q' + i + '"]:checked');
        if (!checked) return null;
        var type = checked.value;
        scores[type] = scores[type] + 1;
      }

      var bestScore = -1;
      var bestTypes = [];
      for (var key in scores) {
        if (scores[key] > bestScore) {
          bestScore = scores[key];
          bestTypes = [key];
        } else if (scores[key] === bestScore) {
          bestTypes.push(key);
        }
      }

      var finalType;
      if (bestTypes.length === 1) {
        finalType = bestTypes[0];
      } else {
        var randomIndex = Math.floor(Math.random() * bestTypes.length);
        finalType = bestTypes[randomIndex];
      }

      return personas[finalType];
    }

    btnResult.addEventListener("click", function () {
      var persona = calculateResult();
      if (!persona) {
        quizErrorEl.style.display = "inline";
        return;
      }

      quizErrorEl.style.display = "none";
      resultNameEl.textContent = persona.name;
      resultArchetypeEl.textContent = persona.archetype;
      resultDescriptionEl.textContent = persona.description;

      resultTraitsEl.innerHTML = "";
      for (var i = 0; i < persona.traits.length; i++) {
        var span = document.createElement("span");
        span.className = "result-trait";
        span.textContent = persona.traits[i];
        resultTraitsEl.appendChild(span);
      }

    
      resultAvatarEl.src = persona.image || "anime-default.png";

      resultCardEl.style.display = "block";
      resultCardEl.scrollIntoView({ behavior: "smooth", block: "center" });
    });

    btnResetQuiz.addEventListener("click", function () {
      var radios = quizQuestionsEl.querySelectorAll('input[type="radio"]');
      for (var i = 0; i < radios.length; i++) radios[i].checked = false;

      var options = quizQuestionsEl.querySelectorAll(".quiz-option");
      for (var j = 0; j < options.length; j++) options[j].classList.remove("selected");

      quizErrorEl.style.display = "none";
      resultCardEl.style.display = "none";
      updateQuizProgress();

      // رجّع الافتراضية
      resultAvatarEl.src = "anime-default.png";
    });

    // تشغيل أولي
    renderQuiz();
    updateQuizProgress();
  </script>
</body>
</html>
