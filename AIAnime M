    var randomQuestions = [
      "ما هو الذكاء الاصطناعي؟",
      "كيف يعمل التعلّم الآلي؟",
      "هل سيأخذ الذكاء الاصطناعي الوظائف؟",
      "ما هو التعلّم العميق؟",
      "لماذا أخلاقيات الذكاء الاصطناعي مهمة؟",
      "ما دور البيانات في الذكاء الاصطناعي؟"
    ];

    function findAiAnswer(question) {
      var q = question.toLowerCase().trim();
      if (!q) {
        return "الرجاء كتابة سؤال عن الذكاء الاصطناعي أولاً، مثل: \"ما هو الذكاء الاصطناعي؟\" أو \"كيف يعمل التعلّم الآلي؟\"";
      }

      for (var i = 0; i < aiKnowledge.length; i++) {
        var item = aiKnowledge[i];
        for (var j = 0; j < item.keywords.length; j++) {
          if (q.indexOf(item.keywords[j]) !== -1) return item.answer;
        }
      }

      return "لا توجد إجابة مبرمجة مسبقًا لهذا السؤال، لكن بشكل عام:\nعند التعامل مع أي نظام ذكاء اصطناعي، اسأل دائمًا: ما نوع البيانات المستخدمة؟ كيف تم تدريب النموذج؟ وما المخاطر والفوائد المحتملة؟";
    }

    btnAsk.addEventListener("click", function () {
      var question = qaInput.value;
      qaAnswer.textContent = findAiAnswer(question);
    });

    btnClear.addEventListener("click", function () {
      qaInput.value = "";
      qaAnswer.textContent = "اكتب سؤالًا عن الذكاء الاصطناعي في الأعلى، وستظهر هنا إجابة تجريبية مبرمجة مسبقًا.";
    });

    btnRandomQuestion.addEventListener("click", function () {
      var random = randomQuestions[Math.floor(Math.random() * randomQuestions.length)];
      qaInput.value = random;
      qaAnswer.textContent = findAiAnswer(random);
    });

