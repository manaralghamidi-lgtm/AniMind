  <script>
    // ====== الثيم ======
    var themeDarkBtn = document.getElementById("theme-dark");
    var themeLightBtn = document.getElementById("theme-light");

    function setTheme(theme) {
      document.body.setAttribute("data-theme", theme);
      if (theme === "dark") {
        themeDarkBtn.classList.add("active");
        themeLightBtn.classList.remove("active");
      } else {
        themeDarkBtn.classList.remove("active");
        themeLightBtn.classList.add("active");
      }
    }

    themeDarkBtn.addEventListener("click", function () { setTheme("dark"); });
    themeLightBtn.addEventListener("click", function () { setTheme("light"); });

    // ====== وضع الأسئلة / الكويز ======
    var btnModeQa = document.getElementById("btn-mode-qa");
    var btnModeQuiz = document.getElementById("btn-mode-quiz");
    var panelQa = document.getElementById("panel-qa");
    var panelQuiz = document.getElementById("panel-quiz");

    function setMode(mode) {
      if (mode === "qa") {
        btnModeQa.classList.add("active");
        btnModeQuiz.classList.remove("active");
        panelQa.style.borderColor = "rgba(0, 233, 255, 0.9)";
        panelQuiz.style.borderColor = getComputedStyle(document.body).getPropertyValue("--border-strong");
      } else {
        btnModeQa.classList.remove("active");
        btnModeQuiz.classList.add("active");
        panelQa.style.borderColor = getComputedStyle(document.body).getPropertyValue("--border-strong");
        panelQuiz.style.borderColor = "rgba(255, 90, 31, 0.95)";
      }
    }

    btnModeQa.addEventListener("click", function () { setMode("qa"); });
    btnModeQuiz.addEventListener("click", function () { setMode("quiz"); });
    setMode("qa");

